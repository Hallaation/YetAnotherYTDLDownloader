<Window
   x:Class="YetAnotherYTDLDownloader.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="clr-namespace:YetAnotherYTDLDownloader"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   Title="MainWindow"
   Width="800"
   Height="450"
   mc:Ignorable="d">

   <Window.DataContext>
      <local:MainWindowViewModel />
   </Window.DataContext>
   <Grid>
      <StackPanel>
         <TextBox Name="URLInput" Text="{Binding InputURL, Mode=TwoWay}" />
         <Button
            Width="200"
            Height="100"
            Command="{Binding AddURL}">
            <TextBlock Text="Add URL" />
         </Button>
         <Button
            Width="200"
            Height="100"
            Command="{Binding OutputURLS}">
            <TextBlock Text="OutputURLS" />
         </Button>
         <Button
            Width="200"
            Height="100"
            Command="{Binding CheckForDLP}">
            <TextBlock Text="Check for DLP" />
         </Button>
         <ListView
            Height="200"
            ItemsSource="{Binding URLList, Mode=OneWay}"
            SelectedIndex="{Binding SelectedURLIndex, Mode=OneWayToSource}" />
      </StackPanel>
   </Grid>
</Window>
